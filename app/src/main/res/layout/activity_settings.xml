<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".SettingsActivity">

    <LinearLayout
        android:id="@+id/LinearLayoutTop"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:orientation="vertical"
        android:paddingStart="30dp"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textViewTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Top"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/topRequestCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Request code for top"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayoutLeft"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="30dp"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LinearLayoutTop">

        <TextView
            android:id="@+id/textViewLeft"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Left"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/leftRequestCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Request code for left"
            android:textColor="@color/black"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayoutRight"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="30dp"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LinearLayoutLeft">

        <TextView
            android:id="@+id/textViewRight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Right"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/rightRequestCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Request code for right"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayoutBottom"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="30dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingEnd="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LinearLayoutRight">

        <TextView
            android:id="@+id/textViewBottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bottom"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/bottomRequestCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Request code for bottom"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/EditOptionTop"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/LinearLayoutTop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/LinearLayoutTop"
        app:srcCompat="@drawable/edit" />

    <ImageView
        android:id="@+id/EditOptionLeft"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/LinearLayoutLeft"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/LinearLayoutLeft"
        app:srcCompat="@drawable/edit" />

    <ImageView
        android:id="@+id/EditOptionRight"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/LinearLayoutRight"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/LinearLayoutRight"
        app:srcCompat="@drawable/edit" />

    <ImageView
        android:id="@+id/EditOptionBottom"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/LinearLayoutBottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/LinearLayoutBottom"
        app:srcCompat="@drawable/edit" />

</androidx.constraintlayout.widget.ConstraintLayout>